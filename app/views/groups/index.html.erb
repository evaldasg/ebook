<div class="row">
  <div class="page-header">
  <div class="row">
    <div class="col-sm-9">
      <h1>Groups</h1>
    </div>
    <div class="col-sm-3">
      <div class="pull-right discipline_new">
        <%= link_to 'New', new_group_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  </div>
</div>


<div class="table-responsive">
<table class="table table-striped table-hover table-bordered">
<thead>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Teacher</th>
    <th>Discipline</th>
    <th>Klass</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= group.variant %></td>
    <td><%= group.teacher.first_name %> <%= group.teacher.last_name %></td>
    <td><%= group.discipline.name %></td>
    <td><%= group.discipline.klass %></td>
    <td><%= link_to glyph(:pencil) + ' Edit', edit_group_path(group) %>
     <%= link_to glyph(:trash) + ' Delete', group, method: :delete,
              data: { confirm: "Are you sore?" } %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
