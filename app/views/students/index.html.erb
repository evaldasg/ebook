<div class="row">
  <div class="page-header">
  <div class="row">
    <div class="col-sm-9">
      <h1>Students</h1>
    </div>
    <div class="col-sm-3">
      <div class="pull-right discipline_new">
        <%= link_to 'New', new_student_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  </div>
</div>


<div class="table-responsive">
<table class="table table-striped table-hover table-bordered">
<thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Class</th>
    <th>Speciality</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= link_to student.last_name, student %></td>
    <td><%= student.klass %></td>
    <td><%= student.speciality %></td>
    <td><%= link_to glyph(:pencil) + ' Edit profile', edit_student_path(student) %>
     <%= link_to glyph(:trash) + ' Delete', student, method: :delete,
              data: { confirm: "Are you sore?" } %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
