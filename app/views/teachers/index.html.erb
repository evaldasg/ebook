<div class="row">
  <div class="page-header">
  <div class="row">
    <div class="col-sm-9">
      <h1>Teachers</h1>
    </div>
    <div class="col-sm-3">
      <div class="pull-right discipline_new">
        <%= link_to 'New', new_teacher_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  </div>
</div>


<div class="table-responsive">
<table class="table table-striped table-hover table-bordered">
<thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Speciality</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.first_name %></td>
    <td><%= link_to teacher.last_name, teacher %></td>
    <td><%= teacher.speciality %></td>
    <td><%= link_to glyph(:pencil) + ' Edit profile', edit_teacher_path(teacher) %>
     <%= link_to glyph(:trash) + ' Delete', teacher, method: :delete,
              data: { confirm: "Are you sore?" } %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
